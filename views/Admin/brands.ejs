<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Your custom scripts here
  });

  <!-- Custom JS -->
  
    document.addEventListener('DOMContentLoaded', function () {
      // SweetAlert for listing/unlisting brands
      const listButtons = document.querySelectorAll('.list-btn');

      listButtons.forEach(button => {
        button.addEventListener('click', function () {
          const isListing = button.classList.contains('btn-outline-success');
          const actionText = isListing ? 'List' : 'Unlist';
          const newClass = isListing ? 'btn-outline-danger' : 'btn-outline-success';
          const newText = isListing ? 'Unlist' : 'List';

          Swal.fire({
            title: `Are you sure you want to ${actionText} this brand?`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: `${actionText}`,
            cancelButtonText: 'Cancel'
          }).then((result) => {
            if (result.isConfirmed) {
              button.textContent = newText;
              button.classList.remove('btn-outline-success', 'btn-outline-danger');
              button.classList.add(newClass);
              Swal.fire({
                title: `Brand has been ${actionText === 'List' ? 'listed' : 'unlisted'}.`,
                icon: 'success'
              });
            }
          });
        });
      });

      // SweetAlert for confirming brand addition
      const addBrandForm = document.querySelector('#addBrandModal form');
      addBrandForm.addEventListener('submit', function (event) {
        event.preventDefault(); // Prevent the default form submission

        Swal.fire({
          title: 'Are you sure you want to add this brand?',
          text: "Make sure all the details are correct.",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonText: 'Yes, add it!',
          cancelButtonText: 'Cancel'
        }).then((result) => {
          if (result.isConfirmed) {
            // If confirmed, submit the form
            addBrandForm.submit();
          }
        });
      });
    });

    
  </script>
