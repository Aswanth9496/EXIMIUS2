      <div class="content-wrapper">
        <div class="row">
          <div class="col-12 grid-margin">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">User Management</h4>
                <div class="table-responsive">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>User Name</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th>Join Date</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% users.forEach((user) => { %>
                        <tr>
                          <td><%= user.name %></td>
                          <td><%= user.email %></td>
                          <td><%= user.isBlocked ? 'Blocked' : 'Active' %></td>
                          <td><%= user.created.toDateString() %></td>
                          <td>
                            <% if (user.isBlocked === false) { %>
                              <button class="btn btn-danger" onclick="toggleBlockUser('<%= user._id %>', 'block')">Block</button>
                            <% } else { %>
                              <button class="btn btn-success" onclick="toggleBlockUser('<%= user._id %>', 'unblock')">Unblock</button>
                            <% } %>
                          </td>
                        </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  
      <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
      <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  
      <script>
        function toggleBlockUser(userId, action) {
          Swal.fire({
            title: 'Are you sure?',
            text: `You want to ${action} this user?`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: `Yes, ${action}!`,
            cancelButtonText: 'No, cancel!',
          }).then((result) => {
            if (result.isConfirmed) {
              // Send AJAX request to block/unblock user
              $.ajax({
                url: '/admin/Users',
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ userId, action }),
                success: (response) => {
                  Swal.fire('Success!', response.message, 'success').then(() => {
                    location.reload(); // Reload the page to see the updated status
                  });
                },
                error: (err) => {
                  Swal.fire('Error!', 'Something went wrong. Please try again.', 'error');
                }
              });
            }
          });
        }
      </script>
    </div>
  </body>
