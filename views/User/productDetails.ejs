<!-- Updated Product Detail Section -->
<section class="colorlib-product">
    <div class="container">
        <div class="row row-pb-lg product-detail-wrap" style="background: #f8f9fa; padding: 2rem; border-radius: 10px;">
            <!-- Thumbnail Images on the Left -->
            <div class="col-md-4 d-flex flex-column align-items-center">
                <div class="thumbnail-images d-flex flex-column">
                    <% product.productimages.slice(0, 3).forEach((image, index) => { %>
                        <div class="thumb mb-3" 
                             onclick="document.getElementById('main-img').src='/productIMG/<%= image %>'" 
                             style="cursor: pointer; transition: transform 0.2s ease-in-out;">
                            <img src="/productIMG/<%= image %>" class="img-fluid rounded" 
                                 alt="Thumbnail <%= index + 1 %>" 
                                 style="border-radius: 10px; border: 2px solid transparent; transition: border 0.2s ease-in-out; object-fit: cover; max-height: 250px; width: 400px;">
                        </div>
                    <% }) %>
                </div>
            </div>
                                   
            <!-- Main Image on the Right -->
            <div class="col-md-8">
                <div class="image-container">
                    <div class="main-image">
                        <img id="main-img" src="/productIMG/<%= product.productimages[0] %>" class="img-fluid" 
                            alt="Main Image" 
                            style="border-radius: 10px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); max-height: 600px; object-fit: cover; width: 100%;">
                    </div>
                </div>
            </div>
        </div>
    </div>
               
</section>

    <div class="product__details__content">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-8">
                    <div class="product__details__text">
                        <h4><strong></strong> <%= product.name %></h4>
                        
                       
                        <h3>$<%=product.price %><span70.00</span></h3>
                        <p><%=product.discription %></p>
                       
                        <div class="product__details__cart__option">
                            <div class="quantity">
                                <div class="pro-qty">
                                    <input type="text" value="1">
                                </div>
                            </div>
                            <a href="#" class="primary-btn">add to cart</a>
                        </div>
                        <div class="product__details__btns__option">
                            <a href="#"><i class="fa fa-heart"></i> add to wishlist</a>
                            
                        </div>
                        <div class="product__details__last__option">
                            <h5><span>Guaranteed Safe Checkout</span></h5>
                            <img src="img/shop-details/details-payment.png" alt="">
                            <ul>
                                <li><span>Brand:</span><%=product.brand.BrandName %></li>
                                <li><span>Categories:</span><%=product.category.name%></li>
                               
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shop Details Section End -->

<!-- Related Section Begin -->
<section class="related spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="related-title">Related Product</h3>
            </div>
        </div>
        <div class="row">
            <% relatedProducts.forEach(product => { %>
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <a href="/product-details/<%= product._id %>" style="text-decoration: none; color: inherit;">
                        <div class="product__item" style="text-align: center;">
                            <div class="product__item__pic" style="position: relative; overflow: hidden;">
                                <img src="/productIMG/<%= product.productimages[0] %>" alt="<%= product.name %>"
                                    class="product-img"
                                    style="width: 100%; max-width: 300px; height: 250px; object-fit: cover; transition: transform 0.5s ease;">
                            </div>
                            <div class="product__item__text" style="padding: 10px 0;">
                                <h6 style="margin: 0; font-size: 16px;"><%= product.name %></h6>
                                <h5 style="margin: 0; font-size: 18px; color: #333;">$<%= product.price.toFixed(2) %></h5>
                            </div>
                        </div>
                    </a>
                </div>
            <% }) %>
        </div>
    </div>
</section>
<!-- Related Section End -->

